{
  "name": "spacekit",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "packages/**/*"
  ],
  "scripts": {
    "build": "yarn clean:dist && yarn prep:css && turbo run build",
    "build-storybook": "yarn prep:css && build-storybook",
    "clean": "npm-run-all -s clean:*",
    "clean:dist": "rimraf dist && rimraf packages/**/dist",
    "clean:turbo": "rimraf packages/**/.turbo",
    "clean:storybook": "rimraf storybook-static",
    "clean:css": "rimraf packages/**/*css.lit.ts",
    "clean:tsbuildinfo": "rimraf packages/**/*.tsbuildinfo",
    "dev": "turbo run dev --parallel",
    "lint": "npm-run-all -s lint:eslint lint:prettier",
    "lint:eslint": "eslint --ext .ts,.html",
    "lint:tsc": "tsc --noEmit",
    "lint:prettier": "prettier --check .",
    "format": "prettier --write  \"./**/*.{ts,html,css,mdx,json}\"",
    "storybook": "yarn prep:css && start-storybook -p 6006",
    "pre-publish": "yarn build && yarn clean:tsbuildinfo && turbo run pre-publish",
    "prep:css": "node scripts/styles.js",
    "prepare": "husky install",
    "reset": "yarn clean && npm-run-all -s reset:*",
    "reset:packages": "rimraf packages/**/node_modules",
    "reset:root": "rimraf ./node_modules",
    "reset:install": "yarn install",
    "restart": "yarn reset && yarn storybook",
    "rebuild": "yarn reset && yarn build"
  },
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@open-wc/eslint-config": "^8.0.2",
    "@storybook/addon-a11y": "^6.5.12",
    "@storybook/addon-essentials": "^6.5.12",
    "@storybook/addon-links": "^6.5.12",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/builder-webpack5": "^6.5.12",
    "@storybook/manager-webpack5": "^6.5.12",
    "@storybook/web-components": "^6.5.12",
    "@typescript-eslint/eslint-plugin": "^4.0.0",
    "@typescript-eslint/parser": "^4.0.0",
    "async": "^3.2.4",
    "autoprefixer": "^10.4.12",
    "babel-loader": "^8.2.5",
    "concurrently": "^7.4.0",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.18",
    "postcss-custom-properties": "^12.1.9",
    "postcss-discard-comments": "^5.1.2",
    "postcss-import": "^15.0.0",
    "postcss-loader": "^7.0.1",
    "postcss-nested": "^6.0.0",
    "prettier": "latest",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.1.8",
    "ts-lit-plugin": "^1.2.1",
    "typescript": "^4.8.4"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "yarn@1.22.19",
  "dependencies": {
    "lit": "^2.4.0"
  }
}
