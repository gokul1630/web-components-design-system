{
  "name": "lit",
  "version": "0.0.0",
  "private": "true",
  "license": "MIT",
  "main": "dist/lit.min.cjs.js",
  "module": "dist/lit.min.esm.js",
  "typings": "dist/packages/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "yarn clean:dist && yarn prep:css && rollup --compact -c rollup.config.js",
    "build-storybook": "yarn prep:css && build-storybook",
    "clean": "npm-run-all -s clean:*",
    "clean:dist": "rimraf dist",
    "clean:storybook": "rimraf storybook-static",
    "clean:css": "rimraf ./**/*css.lit.ts",
    "clean:cache": "rimraf ./.rollup.cache",
    "clean:tsbuildinfo": "rimraf ./**/*.tsbuildinfo",
    "css:watch": "node src/utils/styles.js --watch",
    "format": "prettier --write  \"./**/*.{ts,html,css,mdx,json}\"",
    "lint": "npm-run-all -s lint:*",
    "lint:eslint": "eslint --ext .ts,.html",
    "lint:tsc": "tsc --noEmit",
    "lint:prettier": "prettier --check \"./**/*.{ts,html,css,mdx,json}\"",
    "pre-publish": "yarn build && yarn clean:tsbuildinfo",
    "prep:css": "node src/utils/styles.js",
    "prepare": "husky install",
    "reset": "yarn clean && npm-run-all -s reset:*",
    "reset:packages": "rimraf ./node_modules",
    "reset:install": "yarn install",
    "restart": "yarn reset && yarn storybook",
    "rebuild": "yarn reset && yarn build",
    "start:storybook": "yarn prep:css && start-storybook -p 6006",
    "storybook": "npm-run-all -p css:watch start:storybook",
    "prep:icons": "node src/utils/generateIconExport.js"
  },
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@open-wc/eslint-config": "^8.0.2",
    "@rollup/plugin-commonjs": "^23.0.2",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-typescript": "^9.0.2",
    "@storybook/addon-a11y": "^6.5.12",
    "@storybook/addon-essentials": "^6.5.12",
    "@storybook/addon-links": "^6.5.12",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/builder-webpack5": "^6.5.12",
    "@storybook/manager-webpack5": "^6.5.12",
    "@storybook/web-components": "^6.5.12",
    "@typescript-eslint/eslint-plugin": "^4.0.0",
    "@typescript-eslint/parser": "^4.0.0",
    "async": "^3.2.4",
    "autoprefixer": "^10.4.12",
    "babel-loader": "^8.2.5",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "gaze": "^1.1.3",
    "husky": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.18",
    "postcss-custom-properties": "^12.1.9",
    "postcss-discard-comments": "^5.1.2",
    "postcss-import": "^15.0.0",
    "postcss-loader": "^7.0.1",
    "postcss-nested": "^6.0.0",
    "prettier": "latest",
    "rimraf": "^3.0.2",
    "rollup": "^3.2.3",
    "rollup-plugin-terser": "^7.0.2",
    "tailwindcss": "^3.1.8",
    "ts-lit-plugin": "^1.2.1",
    "typescript": "^4.8.4"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "yarn@1.22.19",
  "dependencies": {
    "lit": "^2.4.0",
    "tslib": "2.4.0"
  }
}
